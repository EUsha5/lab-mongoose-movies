<h1>Edit {{movieDetails.name}}</h1>

<form action="/movies/update/{{theMovie.id}}" method="POST">

  <label for="">Title</label>
  <input type="text" name="title" value="{{theMovie.title}}">

  <label for="">Genre</label>
  <input type="text" name="genre" value="{{theMovie.genre}}">

  <label for="">Plot</label>
  <input type="text" name="plot" value="{{theMovie.plot}}">

  <br />
  <label for="">Cast</label>
  <br />
        {{#each celebs}}
        <div class="checkbox">
          <input type="checkbox" name="cast" value="{{this._id}}">
          {{this.name}}
            {{!-- <option value="{{this._id}}">{{this.name}}</option> --}}
          </input>
          <br />
        </div>
        {{/each}}
  <button>Edit</button>

</form>